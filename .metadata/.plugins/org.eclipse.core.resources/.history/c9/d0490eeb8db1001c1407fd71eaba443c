<script type="text/javascript" src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
<script>
var ID = "";
$(function(){
	getList(); // 공지사항
	getInfo(); // 프로젝트 
	getCareer();
})

function getList(){
	cv_pageInfo.func = getList;
	var pageInfo = {
			pageNo : cv_pageInfo.pageNo,
			orders : [
				{target : "NOTI_NO", isAsc : false},
			],
			limit : 3
	}
	params = {
	}
	cf_callPage("/getList", params, pageInfo, getListCB);
}

function getListCB(data){
	n_dataList = data.list;
	
	// 디폴트
	$('input[id="tab1"]:checked');
	
	
	$("#board-list").html("");
	
   	var listDivHtml = "";
 	if(n_dataList.length == 0){
		listDivHtml += '<div class="comuty"> 게시글이 없습니다. </div>';
	}else{
	   	for(var i=0; i<n_dataList.length; i++){
				listDivHtml += '<div class="comuty">';
				listDivHtml += '	<div class="title">' + n_dataList[i].NOTI_TITLE + '</div>';
				listDivHtml += '		<div class="cont sol">' + n_dataList[i].NOTI_CONTENT + '</div>';
				listDivHtml += '			<div class="bottom" style="align-items: center;">';
				listDivHtml += '				<p class="date">' + n_dataList[i].REG_DT + '</p>';
				listDivHtml += '				<div class=""><a href="#" onclick="event.preventDefault(); goDetail(\'' + n_dataList[i].ID + '\')">바로가기 ></a></div>';
				listDivHtml += '			</div>';
				listDivHtml += '		</div>';
				listDivHtml += '	</div>';
				listDivHtml += '</div>';
		}
	}
   	$("#board-list").html(listDivHtml);
}
function goDetail(ID){
	location.href="/notice/goDetail?ID=" + ID;
}



function getInfo(){
	cv_pageInfo.func = getList;
	var pageInfo = {
			pageNo : cv_pageInfo.pageNo,
			orders : [
				{target : "ID", isAsc : false},
			],
			limit : 3
	}
	params = {
	}
	cf_callPage("getInfo", params, pageInfo, getInfoCB);
}
	
function getInfoCB(data){
	p_dataList = data.list;
	$("#pro-list").html("");
   	var listDivHtml = "";
 	if(p_dataList.length == 0){
		listDivHtml += '<div class="comuty"> 게시글이 없습니다. </div>';
	}else{
	   	for(var i=0; i<p_dataList.length; i++){
			listDivHtml += '<div class="comuty">';
			listDivHtml += '	<div class="title">' + p_dataList[i].PRJ_NAME + '</div>';
			listDivHtml += '	<div class="cont sol">';
			listDivHtml += '		<div class="practi"><span>수행사: </span>' + p_dataList[i].PRJ_CLIENT + '</div>';
			listDivHtml += '			<div class="place"><span>장소: </span>' + p_dataList[i].PRJ_LOCATION + '</div>';
			listDivHtml += '			<div class="skill"><span>주요기술: </span>' + p_dataList[i].PRJ_TECH + '</div>';
			listDivHtml += '		</div>';
			listDivHtml += '		<div class="bottom" style="align-items: center;">';
			listDivHtml += '			<p class="date">' + p_dataList[i].PRJ_START_DT + '~' + p_dataList[i].PRJ_END_DT + '</p>';
			listDivHtml += '			<div class=""><a href="#" onclick="event.preventDefault(); goProject(\'' + p_dataList[i].ID + '\')">바로가기 ></a></div>';
			listDivHtml += '		</div>';
			listDivHtml += '	</div>';
			listDivHtml += '</div>';
		}
	}
   	$("#pro-list").html(listDivHtml);
}

function goProject(ID){
	location.href="/project?ID=" + ID;
}

function getCareer(){
	var params = {
			
	}
	cf_call("/getCareer", params, getCareerCB);
}
function getCareerCB(data){
	console.log("getCareerCB")
	console.log(data)
}
</script>
