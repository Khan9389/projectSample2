<script>
	$(function(){
		var tab = window.location.search;
		tab = "tab"+ tab.substr(5);
		changeTab(tab);
	})
	function changeTab(val){
		$('#' + val + '').prop("checked", true)
		$('section[id*=content]').hide();
		$('#content' + val.substr(3)).show();
	}
	
	var mapOptions = {
		    center: new naver.maps.LatLng(37.55940995140012, 126.83489617639066),
		    //37.4818898, 127.0574661
		    zoom: 15,
		};
	var map = new naver.maps.Map('map', mapOptions);

	var marker = new naver.maps.Marker({
		position : new naver.maps.LatLng(37.55940995140012, 126.83489617639066),
		map : map
	});

</script>
